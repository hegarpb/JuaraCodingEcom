<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Swaglabs eCommerce Suite">

  <listeners>
    <listener class-name="com.juaracoding.ecom.ListenerTest"/>
  </listeners>

  <test name="Authentication Test">
    <parameter name="username" value="standard_user"></parameter>
    <parameter name="password" value="secret_sauce"></parameter>
    <parameter name="baseURL" value="https://www.saucedemo.com/v1/index.html"></parameter>
    <classes>
      <class name="com.juaracoding.ecom.AuthenticationTest"/>
    </classes>
  </test>

  <test name="Inventory Test">
    <classes>
      <class name="com.juaracoding.ecom.InventoryTest"/>
    </classes>
  </test>

  <test name="Add To Cart Test">
    <classes>
      <class name="com.juaracoding.ecom.AddToCartTest"/>
    </classes>
  </test>

</suite>
